---
layout: null
---

{
  "manifest_version": 2,
  "dir": "ltr",
  "lang": "{{ site.language }}",
  "default_locale": "{{ site.language }}",
  "name": "{{ site.title | strip_html | xml_escape }}",
  "short_name": "SotB",
  "description": "{{ site.lede }}",
  "display": "standalone",
  "orientation": "any",
  "start_url": "/",
  "homepage_url": "{{ site.baseurl | prepend: site.url }}",
  "theme_color": "#{{ site.color }}",
  "background_color": "#{{ site.color }}",
  "background": {
    "persistent": false
  },
  "icons": [
    {
      "src": "/favicon.ico",
      "type": "image/ico",
      "sizes": "16x16 32x32"
    },
    {
      "src": "/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ]
}
