{{#extend "page"}}

{{#content "main"}}
{{#if data }}
  <h1 class="no-bg">Proudly sponsored by</h1>
{{else}}
  <h1 class="no-bg">See your company logo below by supporting us!</h1>
{{/if}}
{{#if data.headline}}
  <section>
    <ul class="sponsor-list sponsor-list--headline">
    {{#data.headline}}
      {{>molecule-sponsor}}
    {{/data.headline}}
    </ul>
  </section>
{{/if}}
{{#if data.major}}
  <section>
    <h2 id="major">Major sponsors</h2>
    <ul class="sponsor-list sponsor-list--major">
    {{#data.major}}
      {{>molecule-sponsor}}
    {{/data.major}}
    </ul>
  </section>
{{/if}}
{{#if data.medium}}
  <section>
    <h2 id="medium">Medium sponsors</h2>
    <ul class="sponsor-list sponsor-list--medium">
    {{#data.medium}}
      {{>molecule-sponsor}}
    {{/data.medium}}
    </ul>
  </section>
{{/if}}
{{#if data.small}}
  <section>
    <h2 id="small">Small sponsors</h2>
    <ul class="sponsor-list sponsor-list--small">
    {{#data.small}}
      {{>molecule-sponsor}}
    {{/data.small}}
    </ul>
  </section>
{{/if}}
{{#if data.publicists}}
  <section>
    <h2 id="publicists">Publicists</h2>
    <ul class="sponsor-list sponsor-list--small">
    {{#data.publicists}}
      {{>molecule-sponsor}}
    {{/data.publicists}}
    </ul>
  </section>
{{/if}}
<section>
  {{{contents}}}
</section>
{{/content}}

{{/extend}}
