<!-- Twitter Microdata -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:creator" content="@{{ site.author_twitter }}">
<meta name="twitter:title" content="{{#if title}}{{title}} | {{/if}}{{site.title}}" />
<meta name="twitter:description" content="{{description}}" />
<meta name="twitter:image" content="{{site.logo}}" />
<meta name="twitter:image" content="{{ ogImage }}">
<meta name="twitter:domain" content="{{ site.url }}">
<meta name="twitter:site" content="@webstandards" />