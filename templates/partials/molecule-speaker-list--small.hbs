<ul class="speaker-list">
  {{#each (limit collections.speakers 2)}}
  <li class="speaker-list__card speaker-list__card--small">
    <h3>{{title}}</h3>
    <div class="image-wrap">
      <img src="/images/speakers/{{ speaker.image }}" alt="{{title}}">
    </div>
    <h4><a href="/{{path}}">{{description}}</a></h4>
  </li>
  {{/each}}
</ul>