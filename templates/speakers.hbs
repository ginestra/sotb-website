<!doctype html>
<html class="no-js" lang="en">
  <head>
    {{>head}}
    {{>favicons}}
    {{>twitter-card}}
    {{>og}}
    {{>analytics}}
  </head>
  <body>
    {{>async-css}}
    {{>nav}}

    {{>header}}

    <main class="site-content">

      {{#if collections.speakers}}
        <ul class="speakers-list row align-spaced">
          {{#collections.speakers}}
          <li class="small-10 medium-4 large-4 column">
            {{>speaker-card}}
          </li>
          {{/collections.speakers}}
        </ul>

        <hr>
      {{/if}}

      {{>page}}

      <div class="text-center">
        <a href="http://sotb2015.wpengine.com/" class="secondary button">SOTB 5 Speakers</a>
      </div>

    </main>

    {{>footer}}

    <script src="/assets/js/app.js"></script>
  </body>
</html>